# EditorConfig is awesome: https://EditorConfig.org

# Root marker
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4

# Match specific file extensions
[*.cs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 4
insert_final_newline = true

# YAML files
[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 4
